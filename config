exec dbus-launch dunst

set $mod Mod4
set $font_size 10
set $terminal urxvt256c-ml
set $remote-mpd orfeu

exec --no-startup-id feh --bg-fill /usr/share/wallpapers/Autumn/contents/images/3008x2000.jpg
exec --no-startup-id nm-applet &
exec --no-startup-id ~/bin/mail-check.sh &

exec --no-startup-id i3-msg "workspace 1; append_layout /home/vrusu/.config/i3/w1.json"
exec --no-startup-id i3-msg "workspace 2; append_layout /home/vrusu/.config/i3/w2.json"
exec --no-startup-id /usr/bin/skype &
exec --no-startup-id /usr/bin/sky &
exec --no-startup-id ~/.config/i3/app-on-ws-init.py --workspace "3" --command /usr/bin/pavucontrol &
exec --no-startup-id ~/.config/i3/app-on-ws-init.py --workspace "4" --command /usr/bin/firefox &
